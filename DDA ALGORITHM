#include<graphics.h>
#include<stdio.h>
#include1<conio.h>
#inlcude<math.h>
#include<stdlib.h>
#incluide<dos.h>
void main()
{
floatx,y,x1,y1,x2,y2,dx,dy,stop);
int gd=DETECT,gm;
int i;
initgraph(&gd,&gm,"c:\\Turboc3\\BGI");
printf("enter the value for x1,y1:");
scanf("%f%f",&x1,&y1);
printf("enter the value for x2,y2:");
scanf("%f%f",&x2,&y2);
dx=abs(x2-x1);
dy=abs(y2-y1);
if(dx>=dy);
step=dx;
else{
step=dy;
dx=dx/step;
dy=dy/step;
x=x1;
y=y1;
i=1;
}
while(i<=step)
{
putpixel(x,y,5);
x=x+dx;
y=y+dy;
i=i+1;
delay (100);
}
getch();
closegraph();
}
